# Axes settings
axes.labelsize: 16
axes.labelpad: 7
axes.titlesize: 16
axes.titlepad: 25
axes.grid: True

# Legend settings
legend.fontsize: 14
legend.frameon: False

# Tick settings
xtick.labelsize: 14
ytick.labelsize: 14

# Scientific notation for y-axis
axes.formatter.use_mathtext: True
axes.formatter.limits: -2, 4

# Font settings
font.size: 14

# Savefig settings
savefig.dpi: 300
savefig.bbox: tight